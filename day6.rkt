(define (walk matrix posx posy direction count)
  (define size (utils:matrix-size matrix))
  (define (walk-up)
    (let ((next-posy (- posy 1)))
    (cond ((< next-posy 0) (exit))
          ((= next-posy (car size)) (exit))
          ((eq? (utils:matrix-ref matrix next-posy posx) #\#)
           (walk matrix posx posy 'r count))
          ((eq? (utils:matrix-ref matrix next-posy posx) #\.)
           (utils:matrix-set! matrix next-posy posx #\X)
           (walk matrix posx next-posy 'u (+ count 1)))
          (else
           (walk matrix posx next-posy 'u count)))))
  (define (walk-down)
    (let ((next-posy (+ posy 1)))
    (cond ((< next-posy 0) (exit))
          ((= next-posy (car size)) (exit))
          ((eq? (utils:matrix-ref matrix next-posy posx) #\#)
           (walk matrix posx posy 'l count))
          ((eq? (utils:matrix-ref matrix next-posy posx) #\.)
           (utils:matrix-set! matrix next-posy posx #\X)
           (walk matrix posx next-posy 'd (+ count 1)))
          (else
           (walk matrix posx next-posy 'd count)))))
  (define (walk-right)
    (let ((next-posx (+ posx 1)))
    (cond ((< next-posx 0) (exit))
          ((= next-posx (cdr size)) (exit))
          ((eq? (utils:matrix-ref matrix posy next-posx) #\#)
           (walk matrix posx posy 'd count))
          ((eq? (utils:matrix-ref matrix posy next-posx) #\.)
           (utils:matrix-set! matrix posy next-posx #\X)
           (walk matrix next-posx posy 'r (+ count 1)))
          (else
           (walk matrix next-posx posy 'r count)))))
  (define (walk-left)
    (let ((next-posx (- posx 1)))
    (cond ((< next-posx 0) (exit))
          ((= next-posx (cdr size)) (exit))
          ((eq? (utils:matrix-ref matrix posy next-posx) #\#)
           (walk matrix posx posy 'u count))
          ((eq? (utils:matrix-ref matrix posy next-posx) #\.)
           (utils:matrix-set! matrix posy next-posx #\X)
           (walk matrix next-posx posy 'l (+ count 1)))
          (else
           (walk matrix next-posx posy 'l count)))))
  (define (exit) count)
  (cond ((eq? direction 'u) (walk-up))
        ((eq? direction 'd) (walk-down))
        ((eq? direction 'r) (walk-right))
        ((eq? direction 'l) (walk-left))))
  
